<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_list_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CAD8C6"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/id_image_listv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/niceglass2_removebg_preview_1" />

    <TextView
        android:id="@+id/id_cost_glass_listv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/id_name_glass_listv"
        app:layout_constraintTop_toBottomOf="@+id/id_name_glass_listv" />

    <TextView
        android:id="@+id/id_name_glass_listv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/id_image_listv" />

    <TextView
        android:id="@+id/id_for_listv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/id_image_listv"
        app:layout_constraintEnd_toEndOf="@+id/id_cost_glass_listv" />
</androidx.constraintlayout.widget.ConstraintLayout>